@using EntityLayer.Concrete
@model List<Bus>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int id = 0;
}

<div class="col-sm-12">
    <div class="white-box">
        <h3 class="box-title">Otobus Listesi</h3>
        <p class="text-muted">Toplam Otobus Sayısı : <code>@Model.Count()</code></p>
        <div class="table-responsive">
            <table class="table text-nowrap">
                <thead>
                    <tr>
                        <th class="border-top-0">#</th>
                        <th class="border-top-0">Ad</th>
                        <th class="border-top-0">Kapasite</th>
                        <th class="border-top-0">Puan 5/?</th>
                        <th class="border-top-0">Aciklama</th>
                        <th class="border-top-0">Resim</th>
                        <th>Sil</th>
                        <th>Guncelle</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        { id = id + 1; }
                        <tr>
                            <td>@id</td>
                            <td>@item.Title</td>
                            <td>@item.Limit</td>
                            <td>@item.Rate</td>
                            <td>@item.Description</td>
                            <td><img src="@item.ImageUrl" style="height:100px" /></td>


                            <td>
                                <i class="fas fa-trash" style="color:#dc3545">

                                    @Html.ActionLink("Sil", "DeleteBus", new { id = item.Id }, new { @class = "btn btn-danger btn-sm ", onclick = "return confirm('Gerçekten Silmek İstiyor musunuz ?')" })
                                </i>


                            </td>

                            <td>
                                <i class="fas fa-pen" style="color:#ffd800">
                                    <a style="margin-left:1%" class="btn btn-warning btn-sm" href="/Bus/EditBus/@item.Id">Guncelle</a>
</td>

                        </tr>
                    }
                </tbody>

            </table>
            <a style="margin-left:1%" class="btn btn-success btn-sm" href="/Bus/AddBus/">Yeni Otobus Ekle</a>

        </div>
    </div>
</div>


